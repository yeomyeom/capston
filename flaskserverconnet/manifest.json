{
	"manifest_version": 2,

	"name": "server connector",
	"short_name": "sc",
	"description": "connect to ad parsing server",
	"version": "1.0",
	"author": ["RE-A" , "yeomyeom"],

	
	"background": {
		"scripts": ["popup.js"],
		"persistent": true
	},
	
	"permissions": [
        "tabs",
        "http://*/",
		"https://*/",
		"127.0.0.1:5001/*",
		"https://*/*",
		"http://*/*"
	],
	"content_scripts": [ {
        "js": ["jquery-3.4.1.min.js", "payload.js","jquery.min.js"],
        "matches": [ "http://*/*", "https://*/*" ]    
    } ],
	
	"browser_action": {
		"default_icon": "StickerBlock.png",
		"default_popup": "popup.html"
	}
}